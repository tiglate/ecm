#################################
# Default: normalize to LF
#################################
* text=auto eol=lf

#################################
# Scripts and OS-specific files
#################################
# Windows scripts keep CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
*.psm1 text eol=crlf

# Unix scripts
*.sh  text eol=lf

#################################
# Source files (explicit LF)
#################################
*.java      text eol=lf
*.kt        text eol=lf
*.groovy    text eol=lf
*.gradle    text eol=lf
*.xml       text eol=lf
*.properties text eol=lf

*.yml       text eol=lf
*.yaml      text eol=lf
*.json      text eol=lf
*.md        text eol=lf
*.sql       text eol=lf

*.html      text eol=lf
*.css       text eol=lf
*.scss      text eol=lf
*.js        text eol=lf
*.mjs       text eol=lf
*.cjs       text eol=lf
*.ts        text eol=lf
*.tsx       text eol=lf
*.jsx       text eol=lf

# Lockfiles: keep stable diffs & LF
package-lock.json text eol=lf
pnpm-lock.yaml    text eol=lf
yarn.lock         text eol=lf

#################################
# Certificates / keys
#################################
*.pem   text eol=lf
*.crt   text eol=lf
*.cer   text eol=lf
*.der   binary
*.p12   binary
*.pfx   binary
*.jks   binary
*.keystore binary

#################################
# Binaries and artifacts
#################################
*.class binary
*.jar   binary
*.war   binary
*.ear   binary
*.exe   binary
*.dll   binary
*.so    binary
*.dylib binary

# Images
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.webp  binary
*.ico   binary
*.bmp   binary
*.tiff  binary
*.svg   text eol=lf

# Fonts
*.ttf   binary
*.otf   binary
*.woff  binary
*.woff2 binary
*.eot   binary

# Archives
*.zip   binary
*.7z    binary
*.tar   binary
*.gz    binary
*.bz2   binary
*.xz    binary

#################################
# Meta
#################################
.gitattributes text eol=lf
.gitignore     text eol=lf
.editorconfig  text eol=lf